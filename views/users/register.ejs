<% layout('layouts/authLayout') %>
    <link rel="stylesheet" href="/stylesheets/register.css">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column text-white">
        <!-- Navbar -->

        <!-- Main content -->
        <main class="px-3 flex-fill d-flex justify-content-center align-items-center text-center">
            <div class="register-content">
                <div class="flash-container mb-4">
                    <%- include('../partials/flash') %>
                </div>

                <h1 class="mb-4 fw-bold">Join YelpCamp</h1>
                <p class="lead mb-5">Create your account and start sharing your campgrounds.</p>

                <form action="/register" method="POST" class="register-form mx-auto validated-form" novalidate
                    style="max-width: 400px;">
                    <!-- Username -->
                    <div class="mb-3 text-start">
                        <input class="form-control" type="text" id="username" name="username" placeholder="Username"
                            required>
                        <div class="invalid-feedback">Please provide a username.</div>
                    </div>

                    <!-- Email -->
                    <div class="mb-3 text-start">
                        <input class="form-control" type="email" id="email" name="email" placeholder="Email" required>
                        <div class="invalid-feedback">Please provide a valid email address.</div>
                    </div>

                    <!-- Password -->
                    <div class="mb-4 text-start">
                        <input class="form-control" type="password" id="password" name="password" placeholder="Password"
                            required>
                        <div class="invalid-feedback">Please provide a password.</div>
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn btn-register">Register</button>
                </form>

                <p class="mt-4">Already have an account? <a href="/login" class="brand-link">Login</a></p>
            </div>
        </main>
    </div>