<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/newCampground.css">

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column text-white add-page">

  <main class="px-3 flex-fill d-flex justify-content-center align-items-center text-center">
    <div class="add-form-container">
      <h1 class="mb-4 fw-bold">Add a New Campground</h1>
      <form action="/campgrounds" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
        
        <div class="mb-3 text-start">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" id="title" placeholder="Title" name="campground[title]" required>
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3 text-start">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" id="location" placeholder="Location" name="campground[location]" required>
        </div>

        <div class="mb-3 text-start">
          <label class="form-label" for="price">Campground Price</label>
          <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" id="price" placeholder="0.00" name="campground[price]" required>
          </div>
        </div>

        <div class="mb-3 text-start">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" id="description" placeholder="Description" name="campground[description]" rows="3" required></textarea>
        </div>

<div class="mb-3 text-start">
  <label for="image">Upload Images</label>
  <div class="form-file custom-file">
    <input type="file" class="form-file-input" name="image" id="image" multiple>
    <label class="form-file-label" for="image">
      <span class="form-file-text custom-file-label">Choose image(s)...</span>
      <span class="form-file-button btn btn-secondary">Browse</span>
    </label>
  </div>
</div>


        <button class="btn btn-add mt-4">+ Add Campground</button>
      </form>
      <div class="mt-3">
        <a href="/campgrounds" class="btn btn-view">‚Üê Back to All Campgrounds</a>
      </div>
    </div>
  </main>

</div>
